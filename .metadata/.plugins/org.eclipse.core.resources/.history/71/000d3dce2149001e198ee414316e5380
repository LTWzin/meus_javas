package Retangular;
import java.util.Scanner; 

public class TerrenoRetangular {
	
	public static void main(String [] args) {
		
		double largura, comprimento, metroQuadrado;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Digite o valor do comprimento: ");
		comprimento = sc.nextDouble();
		System.out.println("Digite o valor da largura: ");
		largura = sc.nextDouble();
		comprimento = (largura * comprimento);
		System.out.println();
		System.out.printf("O comprimento desse terreno é de {}m²", comprimento);
		
		
		sc.close();
	}

}
