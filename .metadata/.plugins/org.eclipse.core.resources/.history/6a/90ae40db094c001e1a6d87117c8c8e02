package Loja;

import java.util.Scanner;

public class LojaDePecas {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int cod1, cod2, quantia1, quantia2;
		double prec1, prec2, total1, total2, total3;
		
		System.out.print("Digite as informaçoes do produto 1:");
		System.out.println("(codigo quantia e preço)");
		cod1 = sc.nextInt();
		quantia1 = sc.nextInt();
		prec1 = sc.nextDouble();
		
		System.out.print("Digite as informacoes do produto 2:");
		cod2 = sc.nextInt();
		quantia2 = sc.nextInt();
		prec2 = sc.nextInt();
		
		total1 = quantia1 * prec1;
		total2 = quantia2 * prec2;
		total3 = total1 + total2; 
		
		System.out.printf("Total do produto 1 (%d) : %f%nTotal do produto 2 (%d): %f%n"
				+ "Preço total: %f", cod1, total1, cod2, total2, total3); 
		sc.close();
			

	}

}
